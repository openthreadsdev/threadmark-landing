---
import Footer from '../components/Footer.astro';
import Header from '../components/Header.astro';

interface Props {
  title: string;
  description?: string;
}

const {
  title,
  description = 'Compliance infrastructure for modern commerce.',
} = Astro.props;
const canonicalUrl = Astro.url.href;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="viewport" content="width=device-width" />
    <meta name="description" content={description} />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
    <link rel="canonical" href={canonicalUrl} />
    <link
      rel="preload"
      href="/fonts/inter-latin.woff2"
      as="font"
      type="font/woff2"
      crossorigin
    />

    <!-- OpenGraph -->
    <meta property="og:type" content="website" />
    <meta property="og:url" content={canonicalUrl} />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:site_name" content="Threadmark" />

    <!-- Twitter -->
    <meta name="twitter:card" content="summary" />
    <meta name="twitter:title" content={title} />
    <meta name="twitter:description" content={description} />

    <script is:inline>
      (function () {
        var s = localStorage.getItem('theme');
        var d = window.matchMedia('(prefers-color-scheme: dark)').matches;
        document.documentElement.setAttribute(
          'data-theme',
          s || (d ? 'dark' : 'light')
        );
      })();
    </script>
  </head>
  <body>
    <Header />
    <main>
      <slot />
    </main>
    <Footer />
  </body>
</html>

<style is:global>
  @font-face {
    font-family: 'Inter';
    font-style: normal;
    font-weight: 400 800;
    font-display: swap;
    src: url('/fonts/inter-latin.woff2') format('woff2');
    unicode-range:
      U+0000-00FF, U+0131, U+0152-0153, U+02BB-02BC, U+02C6, U+02DA, U+02DC,
      U+0304, U+0308, U+0329, U+2000-206F, U+20AC, U+2122, U+2191, U+2193,
      U+2212, U+2215, U+FEFF, U+FFFD;
  }

  @font-face {
    font-family: 'Inter';
    font-style: normal;
    font-weight: 400 800;
    font-display: swap;
    src: url('/fonts/inter-latin-ext.woff2') format('woff2');
    unicode-range:
      U+0100-02BA, U+02BD-02C5, U+02C7-02CC, U+02CE-02D7, U+02DD-02FF, U+0304,
      U+0308, U+0329, U+1D00-1DBF, U+1E00-1E9F, U+1EF2-1EFF, U+2020,
      U+20A0-20AB, U+20AD-20C0, U+2113, U+2C60-2C7F, U+A720-A7FF;
  }

  *,
  *::before,
  *::after {
    box-sizing: border-box;
    margin: 0;
    padding: 0;
  }

  :root {
    --color-bg: #f5f7fa;
    --color-surface: #fff;
    --color-surface-alt: #f0f4f8;
    --color-step-bg: #e8eff6;
    --color-text: #1a2332;
    --color-text-secondary: #556275;
    --color-text-muted: #6b7c8f;
    --color-border: #dce4ed;
    --color-input-border: #c8d1dc;
    --color-accent: #0a9989;
    --color-accent-hover: #087a70;
    --color-error-bg: #fef2f2;
    --color-error-text: #991b1b;
    --color-grid-dot: rgba(10, 153, 137, 0.18);
  }

  [data-theme='dark'] {
    --color-bg: #1a1f2e;
    --color-surface: #2a3142;
    --color-surface-alt: #323a4e;
    --color-step-bg: #2e3648;
    --color-text: #f0f4f8;
    --color-text-secondary: #c8d1dc;
    --color-text-muted: #a0adc9;
    --color-border: #3d4a5c;
    --color-input-border: #4d5a6c;
    --color-accent: #1cac99;
    --color-accent-hover: #24c4af;
    --color-error-bg: #3b1f1f;
    --color-error-text: #f5a3a3;
    --color-grid-dot: rgba(28, 172, 153, 0.15);
  }

  html {
    font-family:
      'Inter',
      system-ui,
      -apple-system,
      BlinkMacSystemFont,
      'Segoe UI',
      Roboto,
      sans-serif;
    line-height: 1.6;
    color: var(--color-text);
    -webkit-text-size-adjust: 100%;
  }

  body {
    min-height: 100vh;
    display: flex;
    flex-direction: column;
    background-color: var(--color-bg);
  }

  main {
    flex: 1;
    width: 100%;
  }

  .container {
    max-width: 72rem;
    margin: 0 auto;
    padding-left: 1.5rem;
    padding-right: 1.5rem;
  }

  h1 {
    font-size: 2rem;
    font-weight: 800;
    line-height: 1.2;
  }

  h2 {
    font-size: 1.5rem;
    font-weight: 700;
    line-height: 1.3;
  }

  h3 {
    font-size: 1.125rem;
    font-weight: 600;
    line-height: 1.4;
  }

  @media (min-width: 640px) {
    h1 {
      font-size: 2.5rem;
    }

    h2 {
      font-size: 1.625rem;
    }
  }

  .dot-grid-bg {
    background-image: radial-gradient(
      circle,
      var(--color-grid-dot) 1.2px,
      transparent 1.2px
    );
    background-size: 24px 24px;
  }
</style>
